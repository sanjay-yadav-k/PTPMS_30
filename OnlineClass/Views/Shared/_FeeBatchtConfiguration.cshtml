@model Datalayer.BusinessLogic.fee_SubjectBatchModel
@using (Html.BeginForm("FeeDetail", "Home", FormMethod.Post))
{
    <div class="modal fade" id="modalfeeBatch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Add Fee Batchwise</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        @*<i class="fas fa-user prefix grey-text"></i>*@
                        @Html.HiddenFor(model => model.feeid)
                        @Html.Label("Batch Name")
                        @Html.DropDownListFor(e => e.SubjecBatchtId, (SelectList)ViewBag.DDLBatch, "Select Batch", new { @class = "form-control ddlFeeBatch" })

                    </div>

                    <div class="md-form mb-5">
                        @*<i class="fas fa-user prefix grey-text"></i>*@

                        @Html.Label("Class Name")
                        @Html.DropDownListFor(e => e.ClassId, (SelectList)ViewBag.BatchClassName, "Select Class", new { @class = "form-control ddlfeeClass" })

                    </div>
                    <div class="md-form mb-4">


                        @Html.Label("Plan Type")

                        @Html.DropDownListFor(e => e.durationid, (SelectList)ViewBag.Subscription, "Select Plan Type", new { @class = "form-control ddlFeePlan" })

                    </div>


                    <div class="md-form mb-4">


                        @Html.Label("Fee")
                        @Html.TextBoxFor(model => model.feenew2, new { @class = "form-control " })
                    </div>

                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-deep-orange">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
