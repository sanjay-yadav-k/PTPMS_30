                                    <td>@item.StudentName</td>
                                    <td class="center">
                                        @item.ClassName
                                    </td>
                                    <td class="center">@item.Subject</td>


                                    <td>@Html.Label("Show Class", null, new { @onclick = "Showclander('" + @item.studentteacheridmap + "','" + @item.TeacherId + "','student')" }) </td>
