                            <tr>
                                <th>Student Name</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.studentmap)
                        {
                            <tbody>
                                <tr>
