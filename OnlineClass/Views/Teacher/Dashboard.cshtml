                                    {
                                        <td colspan="4"><span id="hm_timer_@item.studentteacheridmap"></span></td>
                                        <td></td>
                                    }


                                </tr>
                            </tbody>
                        }
                    </table>
                    <nav aria-label="">
                        @Html.Partial("_Teacherpagination")
                    </nav>
                </div>
            </div>
        </div>
  

        <div class="box col-md-12">
