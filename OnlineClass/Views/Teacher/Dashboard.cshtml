                                    {

                                        <td colspan="4"><span id="hm_timer_student_@item.studentteacheridmap"></span></td>

                                        <script>
                                        $(document).ready(function () {
                                            var dt = new Date();
                                            var time = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                                           // alert(time);
                                            var start = time;
                                            var end ='@item.Totime';
                                            s = start.split(':');
                                            e = end.split(':');
                                            //alert(e[1]);
                                            //alert(s[1]);
                                            min = e[1] - s[1];
                                            hour_carry = 0;
                                            //if (min < 0) {
