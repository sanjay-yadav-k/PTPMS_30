    function getsubject(clsId) {
        $("#SubjectId").empty();
        debugger
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getSubjectlist", "Home")',
                dataType: 'json',
                data: { id: clsId },
                success: function (subject) {

                    $(".ddlfeesubject").each(function () {
