            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#title_@item.classid">@item.classname</a>
                        </h4>
                    </div>
                    <div id="title_@item.classid" class="panel-collapse collapse">
                        @foreach (var tem2 in @item.chapterSubject)
