                                                        </a>
                                                    </div>

                                                    <div id="Chepter-@i@item3.Chapter_id" class="panel-collapse collapse">
                                                        <div class="panel-body">
                                                            @Html.Raw(item3.Syllubus)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                </div>


                            </div>
                            i++;
                        }

                    </div>
                </div>
